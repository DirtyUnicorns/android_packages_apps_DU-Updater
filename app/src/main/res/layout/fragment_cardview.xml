<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="false"
    android:layout_weight="1"
    app:cardBackgroundColor="?android:attr/windowBackground"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardMaxElevation="4dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/update_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/update_name"
            android:layout_below="@+id/update_md5"
            android:layout_marginBottom="50dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/update_md5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/update_name"
            android:layout_below="@+id/update_name"
            android:layout_marginTop="20dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnDownload"
            style="?android:attr/colorButtonNormal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom|end"
            android:background="@*android:color/accent_device_default_light"
            android:elevation="6dp"
            android:gravity="center"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/action_download"
            android:textAlignment="gravity"
            android:textColor="?android:textColorPrimaryInverse"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>