<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="false"
    android:layout_weight="1"
    app:cardBackgroundColor="?attr/card_background_color"
    app:cardCornerRadius="6dp"
    app:cardElevation="3dp"
    app:cardMaxElevation="3dp">

    <RelativeLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/update_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="marquee"
            android:focusable="true"
            android:marqueeRepeatLimit="2"
            android:singleLine="true"
            android:textColor="?android:textColorPrimary"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/update_size_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/update_name"
            android:layout_below="@+id/update_md5_title"
            android:layout_marginBottom="50dp"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/update_size_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/update_size_title"
            android:layout_below="@+id/update_md5_title"
            android:layout_marginBottom="50dp"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/update_md5_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/update_name"
            android:layout_below="@+id/update_name"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:textStyle="bold"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/update_md5_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/update_md5_title"
            android:layout_below="@+id/update_name"
            android:layout_marginTop="20dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:textColor="?android:textColorPrimary"
            android:textSize="12sp" />

        <Button
            android:id="@+id/btnDownload"
            style="?android:attr/colorButtonNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="@android:color/transparent"
            android:elevation="6dp"
            android:gravity="center"
            android:text="@string/action_download"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="@color/colorAccent"
            android:textSize="12sp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>